{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "number of keys published per day",
    "width": 700,
    "height": 250,
    "data": {
        "url": "./plots/data.json"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "sum",
                    "field": "published",
                    "as": "sum_published"
                }
            ]
        }
    ],
    "encoding": {
        "x": {
            "timeUnit": "utcyearmonthdate",
            "field": "date",
            "type": "temporal",
            "axis": {
                "labelAngle": 0,
                "tickCount": "week",
                "labelExpr": "[timeFormat(datum.value, '%d'), timeFormat(datum.value, '%d') <= '07' ? timeFormat(datum.value, '%b %y') : '']",
                "gridDash": {
                    "condition": {
                        "test": {
                            "field": "value",
                            "timeUnit": "day",
                            "equal": 1
                        },
                        "value": []
                    },
                    "value": [
                        2,
                        2
                    ]
                },
                "tickDash": {
                    "condition": {
                        "test": {
                            "field": "value",
                            "timeUnit": "day",
                            "equal": 1
                        },
                        "value": []
                    },
                    "value": [
                        2,
                        2
                    ]
                }
            }
        }
    },
    "layer": [
        {
            "encoding": {
                "y": {
                    "field": "published",
                    "type": "quantitative",
                    "axis": {
                        "title": "published keys per day",
                        "titleColor": "steelblue"
                    }
                },
                "text": {
                    "field": "published",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "mark": "bar"
                },
                {
                    "mark": {
                        "type": "text",
                        "color": "darkblue",
                        "align": "right",
                        "baseline": "middle",
                        "fontSize": 9,
                        "angle": 90,
                        "dx": -3,
                        "dy": -3,
                        "opacity": 0
                    }
                }
            ]
        },
        {
            "encoding": {
                "y": {
                    "field": "sum_published",
                    "type": "quantitative",
                    "axis": {
                        "title": "running total of keys published",
                        "titleColor": "#b4464b"
                    }
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "line",
                        "interpolate": "monotone",
                        "point": {
                            "color": "#b4464b"
                        },
                        "color": "#b4464b"
                    }
                }
            ]
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}
