{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "number of keys valid per day",
  "width": 700,
  "height": 250,
  "data": {
    "url": "./plots/data.json"
  },
  "encoding": {
    "x": {
      "timeUnit": "utcyearmonthdate",
      "field": "date",
      "type": "temporal",
      "axis": {
        "values": {
          "expr": "utcSequence('day', utc(2019, 0), utc(2022, 12))"
        },
        "labelExpr": "[((timeFormat(datum.value, '%d') == '01') | (timeFormat(datum.value, '%d') == '15')) ? timeFormat(datum.value, '%d') : '', timeFormat(datum.value, '%d') == '01' ? timeFormat(datum.value, '%b %y') : '']",
        "gridColor": {
          "condition": {
            "test": {
              "field": "value",
              "timeUnit": "date",
              "equal": 1
            },
            "value": "lightgrey"
          },
          "value": null
        },
        "tickColor": {
          "condition": {
            "test": {
              "field": "value",
              "timeUnit": "date",
              "equal": 1
            },
            "value": "grey"
          },
          "value": "lightgrey"
        }
      }
    }
  },
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "valid",
          "type": "quantitative",
          "axis": {
            "title": "keys valid per day"
          }
        }
      },
      "layer": [
        {
          "mark": "bar"
        },
        {
          "mark": {
            "type": "text",
            "color": "darkblue",
            "align": "right",
            "baseline": "middle",
            "fontSize": 9,
            "angle": 90,
            "dx": -3,
            "dy": -3,
            "opacity": 0
          }
        }
      ]
    }
  ]
}
