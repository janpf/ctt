{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "number of keys valid per day by risk level (interactive)",
  "width": 700,
  "height": 250,
  "data": {
    "url": "./plots/dataByRisk.json"
  },
  "transform": [
    {
      "calculate": "datum.valid + ' keys with risk lvl ' + datum.risk",
      "as": "tt"
    }
  ],
  "encoding": {
    "x": {
      "timeUnit": "utcyearmonthdate",
      "field": "date",
      "type": "temporal",
      "axis": {
        "labelAngle": 0,
        "tickCount": "week",
        "labelExpr": "[timeFormat(datum.value, '%d'), timeFormat(datum.value, '%d') <= '07' ? timeFormat(datum.value, '%b %y') : '']",
        "gridDash": {
          "condition": {
            "test": {
              "field": "value",
              "timeUnit": "day",
              "equal": 1
            },
            "value": []
          },
          "value": [
            2,
            2
          ]
        },
        "tickDash": {
          "condition": {
            "test": {
              "field": "value",
              "timeUnit": "day",
              "equal": 1
            },
            "value": []
          },
          "value": [
            2,
            2
          ]
        }
      }
    }
  },
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "valid",
          "type": "quantitative",
          "axis": {
            "title": "number of keys valid on given day"
          }
        },
        "color": {
          "field": "risk",
          "type": "ordinal"
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "interpolate": "monotone",
            "point": true
          }
        },
        {
          "selection": {
            "label": {
              "type": "single",
              "nearest": true,
              "on": "mouseover",
              "encodings": [
                "x"
              ],
              "empty": "none"
            }
          },
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {
                "selection": "label",
                "value": 1
              },
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [
        {
          "filter": {
            "selection": "label"
          }
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "rule",
            "color": "gray"
          }
        },
        {
          "encoding": {
            "text": {
              "type": "text",
              "field": "tt"
            },
            "y": {
              "type": "quantitative",
              "field": "valid"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "right",
                "dx": -5,
                "dy": -5
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "right",
                "dx": -5,
                "dy": -5
              },
              "encoding": {
                "color": {
                  "type": "ordinal",
                  "field": "risk"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
